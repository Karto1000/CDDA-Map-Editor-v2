{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "CDDA Map Editor",
  "version": "0.1.0",
  "identifier": "com.cdda-map-editor-2.app",
  "build": {
    "beforeDevCommand": "vite dev --port 3000",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../src/dist"
  },
  "app": {
    "windows": [
      {
        "title": "CDDA Map Editor",
        "width": 800,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
